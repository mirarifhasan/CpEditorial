@model CpEditorial.Models.SearchModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <link href="~/Content/site.css" rel="stylesheet">

</head>
<body>
    @*NavBer*@
    @{
        Html.RenderPartial("NavigationBar");
    }

    @*Login from section*@
    <section class="contact-area section-padding-100">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Login Form Area -->
                <div class="col-10 col-md-8 col-lg-8">
                    <div class="form-group">
                        <h4 style="text-align:center; margin-top:40px;">Search with</h4>
                        <!-- Login Form -->
                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="col-12 col-md-12">
                                    <div class="group">
                                        <label for="email">Editorial Title</label>
                                        @Html.TextBoxFor(m => m.STitle, new { @class = "form-control", @required = true })
                                    </div>
                                </div>

                                <div class="col-12 mt-30" style="text-align:center;">
                                    <button type="submit" class="btn world-btn">Search</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    @if (Model.searchList.Count > 0)
    {
    <div class="container">
        <div class="row justify-content-center">
            <!-- ============= Post Content Area Start ============= -->
            <div class="col-12 col-lg-8">
                <div class="post-content-area mb-100">
                    <!-- Catagory Area -->
                    <div class="world-catagory-area">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="world-tab-1" role="tabpanel" aria-labelledby="tab1">
                                <!-- List of last 10 editorials -->
                                @for (int i = 0; i < Model.searchList.Count; i++)
                                {
                                    <!-- Single Blog Post -->
                                    <div class="single-blog-post post-style-4 d-flex align-items-center">
                                        <!-- Post Content -->
                                        <a href="../Editorial/ViewEditorial?id=@Model.searchList[i].EditorialID" class="headline">
                                            <div class="post-content">
                                                <h5>@Model.searchList[i].ProblemTitle</h5>
                                                <p style="height:50px;">@Model.searchList[i].Solution</p>
                                                <!-- Post Meta -->
                                                <div class="post-meta">
                                                    <!--<p><a href="#" class="post-author">Katy Liu</a> on <a href="#" class="post-date">Sep 29, 2017 at 9:48 am</a></p>-->
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    else
    {
        <h5 style="text-align:center;margin-bottom:50px;">No result found</h5>
    }

    @*Footer*@
    @{
        Html.RenderPartial("Footer");
    }

</body>
</html>
